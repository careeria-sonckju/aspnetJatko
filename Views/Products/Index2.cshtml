@model IEnumerable<WebAppFirst.Models.Product>
@{
    ViewBag.Title = "Index2";
}
@section scripts {
    <script type="text/javascript">
        $(function () {
            $(".showProductId").click(function () {
                var productId = $(this).data("productid");
                alert(productId);
            });
        });
        $(function () {
            $("#poistaTuote").click(function () {
                var productId = $(this).data("productid");
                alert(productId);
            });
        });
    </script>
}
<div class="container-fluid">
    <h2>Tuotteet</h2>
    <h5>Tuotteita on @Model.Count() kappaletta</h5>
    <div class="row">
        @foreach (WebAppFirst.Models.Product prod in Model)
        {
        <div class="col-lg-3">
            <div class="card mb-3">
                <h3 class="card-header">@prod.ProductName</h3>
                <div class="card-body">
                    <h5 class="card-title">@prod.QuantityPerUnit</h5>
                    <h6 class="card-subtitle text-muted">@prod.UnitsInStock</h6>
                </div>
                <img style="height: 200px; width: 100%; display: block;" alt="Card image" src="@prod.ImageLink" alt="@prod.ImageLink">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@prod.UnitPrice</li>
                    <li class="list-group-item">@prod.UnitsOnOrder</li>
                    <li class="list-group-item">@prod.ReorderLevel</li>
                </ul>
                <div class="card-body">
                    <a class="card-link" href="#">Card link</a>
                    <a class="card-link" href="#">Another link</a>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
            <button class="btn btn-primary showProductId" data-productID="@prod.ProductID">Kukkuu</button>
        </div>
        }
    </div>
</div>
<script>
    function naytaValittuTuote(TuoteId) {
        alert(TuoteId);
    }
</script>

